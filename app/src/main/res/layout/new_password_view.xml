<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_listview">

    <TextView
        android:id="@+id/tw_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/admin_code"
        android:textColor="@color/Black"/>

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tw_new_password"
        android:inputType="textPassword"
        android:textColor="@color/Black"/>

    <TextView
        android:id="@+id/tw_confirm_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_new_password"
        android:layout_centerHorizontal="true"
        android:text="@string/confirm_admin_code"
        android:textColor="@color/Black"/>

    <EditText
        android:id="@+id/et_confirm_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tw_confirm_new_password"
        android:inputType="textPassword"
        android:textColor="@color/Black"/>

</RelativeLayout>