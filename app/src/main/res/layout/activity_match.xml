<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MatchActivity"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="All matches on field "
        android:textSize="25sp"
         />

    <TextView
        android:id="@+id/nr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nr"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        />

    <TextView
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Group"
        android:layout_toRightOf="@+id/nr"
        android:layout_alignTop="@+id/nr"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_toRightOf="@+id/group"
        android:layout_alignTop="@+id/group"
        android:layout_marginLeft="5dp"
       />

    <TextView
        android:id="@+id/match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:text="Match"
        android:layout_toRightOf="@+id/time"
        android:layout_alignTop="@+id/time"
        android:layout_marginLeft="100dp"
       />



    <ListView
        android:id="@+id/matches"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="114dp"
        android:padding="5dp"
        android:background="@drawable/border_listview"
        />


    <Button
        android:id="@+id/team2"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:text="Register players of "
        android:layout_toRightOf="@+id/team1"
        android:layout_alignTop="@+id/team1"
        android:layout_marginLeft="10dp"
         />

    <Button
        android:id="@+id/team1"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="85dp"
        android:text="Register players of "
        />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:text="Register result for this match"
        android:layout_centerHorizontal="true"
       />


</RelativeLayout>